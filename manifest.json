{
  "manifest_version": 2,

  "name": "Daily Summaries",
  "description": "Record some words each day and save them in a Google Spreadsheet.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "https://spreadsheets.google.com/"
  ],
  "browser_action": {
    "default_title": "Record summary"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}