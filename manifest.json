{
  "manifest_version": 2,

  "name": "Nagger",
  "description": "Nags you",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "https://spreadsheets.google.com/"
  ],
  "browser_action": {
    "default_title": "Nag me"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}